@model List<ContatoModel>

@{
    ViewData["Title"] = "Contato";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-start">
    <a role="button" class="btn btn-success" asp-controller="Contato" asp-action="Criar">Adicionar nova Tarefa</a>
    </div> <!--Botão adicionar Contato-->
    <h1>Lista de Tarefas</h1>
    <table class="table">
    
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tarefa</th>
                <th scope="col">Data para realizar</th>
                <th scope="col">Horário</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any()){
                foreach(var contato in Model){
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Nome</td>
                        <td>@contato.Celular</td>
                        <td>@contato.Email</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-danger" asp-controller="Contato" asp-action="Apagar" asp-route-id="@contato.Id">Apagar</a>
                            </div>
                        </td>
                    </tr>

                }
            }
        </tbody>
    </table>
</div>


